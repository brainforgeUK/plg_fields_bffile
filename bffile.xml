<?xml version="1.0" encoding="utf-8" ?>
<extension type="plugin" version="3.7.0" group="fields" method="upgrade">
	<name>plg_fields_bffile</name>
	<author>Jonathan Brain</author>
	<creationDate>February 2018</creationDate>
	<copyright>Copyright (C) 2018 Jonathan Brain. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>brainforge.uk@btinternet.com</authorEmail>
	<authorUrl>http://www.brainforge.co.uk</authorUrl>
	<version>3.7.0</version>
	<description>PLG_FIELDS_BFFILE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="bffile">bffile.php</filename>
		<folder>fields</folder>
		<folder>layouts</folder>
		<folder>params</folder>
		<folder>tmpl</folder>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_fields_bffile.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_fields_bffile.sys.ini</language>
	</languages>

	<scriptfile>install.bffile.php</scriptfile>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="bffile_download_class"
					type="textarea"
					label="PLG_FIELDS_BFFILE_PARAMS_DOWNLOAD_CLASS_LABEL"
					description="PLG_FIELDS_BFFILE_PARAMS_DOWNLOAD_CLASS_DESC"
					size="40"
				/>

				<field
					name="bffile_suffix_list"
					type="textarea"
					label="PLG_FIELDS_BFFILE_PARAMS_SUFFIX_LIST_LABEL"
					description="PLG_FIELDS_BFFILE_PARAMS_SUFFIX_LIST_DESC"
					size="20"
				/>

				<field
					name="browserNav"
					type="list"
					label="PLG_FIELDS_BFFILE_PARAMS_BROWSERNAV_LABEL"
					description="PLG_FIELDS_BFFILE_PARAMS_BROWSERNAV_DESC"
					default="0"
					filter="int"
				>
					<option value="0">PLG_FIELDS_BFFILE_PARAMS_BROWSERNAV_AUTOMATIC</option>
					<option value="1">PLG_FIELDS_BFFILE_PARAMS_BROWSERNAV_DOWNLOAD</option>
					<option value="2">PLG_FIELDS_BFFILE_PARAMS_BROWSERNAV_PARENT</option>
					<option value="3">PLG_FIELDS_BFFILE_PARAMS_BROWSERNAV_NEW</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
